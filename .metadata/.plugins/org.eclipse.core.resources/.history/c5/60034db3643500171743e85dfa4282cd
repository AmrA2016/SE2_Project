package com.se_project.controllers.services;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.se_project.models.StudentNotification;
import com.se_project.repositories.CourseRepository;
import com.se_project.repositories.NotificationsRepo;

@Service
public class NotificationsService {
    
	@Autowired
	private NotificationsRepo notificationrepo;
	
	List<StudentNotification>notification =new ArrayList<StudentNotification>();
	
	public List<StudentNotification> getNotification(String username){
		notificationrepo.findByStudentUsername(username).forEach(notification::add);
		return notification;
	}
	
}
